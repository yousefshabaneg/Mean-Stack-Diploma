{{>header}}
{{>navbar}}
<section class="my-5 container">
  {{#unless data}}
  <div class="alert text-center alert-dark">
    Invalid Task Id
  </div>
  {{else}}
  <div class="row alert alert-info">
    <div class="col-2">
      id: {{data.id}}
    </div>
    <div class="col-2">
      Date: {{data.dueDate}}
    </div>
    <div class="col-2">
      Status: {{data.status}}
    </div>
    <div class="col-3">
      Title: {{data.title}}
    </div>
    <div class="col-3">
      Content: {{data.content}}
    </div>
  </div>
   {{/unless}}
</section>
{{>footer}}
